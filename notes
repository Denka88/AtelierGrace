HorizontalLayout buttonLayout = new HorizontalLayout();
        buttonLayout.setWidthFull();
        buttonLayout.setPadding(true);
        buttonLayout.setSpacing(true);
        
        VerticalLayout group1 = new VerticalLayout();
        Button mainButton1 = new Button("Потом придумаю че");
        Button subButton1 = new Button("Доп. действие 1");
        group1.add(mainButton1, subButton1);
        group1.setSpacing(false);
        group1.setPadding(false);

        buttonLayout.add(group1);
        buttonLayout.setAlignItems(Alignment.BASELINE);
        
        ^^^^^^Это для кнопок фильтрации^^^^^^^